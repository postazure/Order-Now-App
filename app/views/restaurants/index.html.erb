<table class="table">
  <thead>
    <tr>
      <th colspan="3">
        Name
      </th>
      <th>
        Tags
      </th>
      <th>
        Delivery Estimate
      </th>
    </tr>
  </thead>
  <% @restaurants.each do |restaurant| %>
  <tbody>
    <tr>
      <td>
        <img src=<%= restaurant.logo %> width="30px"/>
      </td>
      <td>
        <%= link_to restaurant.name, restaurant.source_url %>
      </td>
      <td>
        <%= restaurant.accepting_orders? %>
      </td>
      <td>
        <%= restaurant.tags.join(" | ") %>
      </td>
      <td>
        <%= restaurant.delivery_time_min %> - <%= restaurant.delivery_time_max %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
