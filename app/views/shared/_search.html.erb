<%= form_tag restaurants_path, method: 'get', class:"form-inline" do %>
  <div class="form-group">
    <%= text_field_tag :keywords, params[:keywords], placeholder:"mexican thai etc", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= text_field_tag :location, params[:location], placeholder:"zip code", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Eat Soon", class:"btn btn-primary" %>
  </div>
<% end %>
